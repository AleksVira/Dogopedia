<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/small_margin"
    android:paddingVertical="@dimen/small_margin">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/breedHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin"
        android:fontFamily="@font/roboto_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Порода собаки" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subBreedsCounterField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin"
        android:paddingTop="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/breedHeader"
        app:layout_constraintStart_toEndOf="@+id/breedHeader"
        app:layout_constraintTop_toTopOf="@+id/breedHeader"
        tools:text="(1 cубпорода)"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/small_margin"
        android:layout_marginEnd="@dimen/base_margin"
        android:src="@drawable/ic_small_arrow"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/breedHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/breedHeader" />


</androidx.constraintlayout.widget.ConstraintLayout>